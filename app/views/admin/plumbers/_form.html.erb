<%= form_for(plumber, url: admin_plumbers_path) do |form| %>
  <% if plumber.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(plumber.errors.count, "error") %> prohibited this plumber from being saved:</h2>

      <ul>
        <% plumber.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
